<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardBackgroundColor="#424242"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/act"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <TextView
            android:id="@+id/nameee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:text="here comes the name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameee"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/fa"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="BMI"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/valcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/fa"
                android:layout_alignBottom="@+id/fa"
                android:layout_toEndOf="@+id/fa"
                android:layout_toRightOf="@+id/fa"
                android:text="value:"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/lg"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="WEIGHT"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/valdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lg"
                android:layout_alignBottom="@+id/lg"
                android:layout_toEndOf="@+id/lg"
                android:layout_toRightOf="@+id/lg"
                android:text="floorno:"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/des"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/se"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="DATE"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/valdis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/se"
                android:layout_alignBottom="@+id/se"
                android:layout_toEndOf="@+id/se"
                android:layout_toRightOf="@+id/se"
                android:text="floorno:"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dis"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/da"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="TIME"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/valdur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/da"
                android:layout_alignBottom="@+id/da"
                android:layout_toEndOf="@+id/da"
                android:layout_toRightOf="@+id/da"
                android:text="floorno:"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dur"
            android:layout_marginTop="4dp"
            android:background="#e8edb5"
            android:gravity="center"
            android:text="Swipe more for next Activity" />
    </RelativeLayout>
</android.support.v7.widget.CardView>